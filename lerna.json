{
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "version": {
      "allowBranch": "stream-vardata",
      "conventionalCommits": true,
      "createRelease": "github",
      "message": "chore(release): publish",
      "preid": "beta",
      "conventionalPrerelease": true,
      "noPrivate": true,
      "noGitTagVersion": true,
      "noPush": true,
      "noChangeLog": true,
      "distTag": "beta",
      "preDistTag": "beta"
    },
    "publishConfig": {
      "distTag": "beta",
      "preDistTag": "beta"
    }
  }
}
